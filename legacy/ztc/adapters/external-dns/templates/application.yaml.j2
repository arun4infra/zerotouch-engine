apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: external-dns
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "1"
spec:
  project: default
  source:
    repoURL: https://kubernetes-sigs.github.io/external-dns
    chart: external-dns
    targetRevision: "{{ version }}"
    helm:
      values: |
        provider:
{%- if provider == "hetzner" %}
          name: webhook
          webhook:
            image:
              repository: docker.io/hetzner/external-dns-hetzner-webhook
              tag: v0.3.2
            env:
              - name: HETZNER_TOKEN
                valueFrom:
                  secretKeyRef:
                    name: external-dns-hetzner
                    key: HETZNER_DNS_TOKEN
{%- elif provider == "aws" %}
          name: aws
        serviceAccount:
          annotations:
            eks.amazonaws.com/role-arn: arn:aws:iam::ACCOUNT_ID:role/external-dns
{%- endif %}
        sources:
          - gateway-httproute
        domainFilters:
          - nutgraf.in
        resources:
          requests:
            cpu: 10m
            memory: 32Mi
          limits:
            cpu: 50m
            memory: 64Mi
        logLevel: info
        policy: sync
        registry: txt
        txtOwnerId: external-dns
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ namespace }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
    retry:
      limit: 15
      backoff:
        duration: 30s
        maxDuration: 10m
