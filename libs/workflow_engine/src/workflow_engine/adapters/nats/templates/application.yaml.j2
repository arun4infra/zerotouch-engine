apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: nats
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "5"
spec:
  project: default
  source:
    chart: nats
    repoURL: https://nats-io.github.io/k8s/helm/charts/
    targetRevision: {{ version }}
    helm:
      valuesObject:
        config:
          jetstream:
            enabled: true
            fileStore:
              enabled: true
              dir: /data
              maxSize: {{ jetstream_file_store_size }}
              pvc:
                enabled: true
                size: {{ jetstream_file_store_size }}
                storageClassName: local-path
            memoryStore:
              enabled: true
              maxSize: {{ jetstream_memory_store_size }}
          cluster:
            enabled: false
        container:
          image:
            repository: nats
            tag: 2.10.22-alpine
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 1Gi
        natsBox:
          enabled: true
{%- if mode == "production" %}
        statefulSet:
          patch:
            - op: add
              path: /spec/template/spec/tolerations
              value:
                - key: node-role.kubernetes.io/control-plane
                  operator: Exists
                  effect: NoSchedule
            - op: add
              path: /spec/template/spec/affinity
              value:
                nodeAffinity:
                  requiredDuringSchedulingIgnoredDuringExecution:
                    nodeSelectorTerms:
                      - matchExpressions:
                          - key: node-role.kubernetes.io/control-plane
                            operator: Exists
{%- endif %}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ namespace }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
    retry:
      limit: 5
      backoff:
        duration: 5s
        factor: 2
        maxDuration: 3m
  ignoreDifferences:
    - group: apps
      kind: StatefulSet
      name: nats
      jqPathExpressions:
        - .spec.volumeClaimTemplates[]?.metadata.creationTimestamp
        - .spec.volumeClaimTemplates[]?.status
