# Override gateway-config for {{ environment }} environment
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: gateway-config
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "6"
spec:
  project: default
  source:
    repoURL: {{ platform_repo_url }}
    targetRevision: {{ platform_repo_branch }}
    path: generated/argocd/k8/overlays/{{ environment }}/gateway-config
  destination:
    server: https://kubernetes.default.svc
  ignoreDifferences:
    - group: gateway.networking.k8s.io
      kind: Gateway
      jsonPointers:
        - /spec/infrastructure/annotations
        - /spec/listeners/1/tls/certificateRefs
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - ServerSideApply=true
      - RespectIgnoreDifferences=true
    retry:
      limit: 10
      backoff:
        duration: 30s
        maxDuration: 5m
