version: v1alpha1
debug: false
persist: true
machine:
  type: controlplane
  token: {{ secrets.secrets.bootstraptoken }}
  ca:
    crt: {{ secrets.certs.os.crt }}
    key: {{ secrets.certs.os.key }}
  certSANs:
    - {{ node_ip }}
    - {{ cluster_endpoint.split(':')[0] }}
  kubelet:
    image: {{ kubelet_image }}
    extraArgs:
      rotate-server-certificates: "true"
  network:
    hostname: {{ node_name }}
    interfaces:
      - interface: eth0
        dhcp: true
  install:
    disk: {{ disk_device }}
    image: {{ installer_image }}
    wipe: false
  files: []
  env: {}
  time:
    disabled: false
    servers:
      - time.cloudflare.com
  sysctls:
    net.core.somaxconn: "65535"
    net.core.netdev_max_backlog: "4096"
  systemDiskEncryption: {}
  features:
    rbac: true
    stableHostname: true
    apidCheckExtKeyUsage: true
    diskQuotaSupport: true
    kubePrism:
      enabled: true
      port: 7445
    hostDNS:
      enabled: true
      forwardKubeDNSToHost: true
cluster:
  id: {{ secrets.cluster.id }}
  secret: {{ secrets.cluster.secret }}
  controlPlane:
    endpoint: https://{{ cluster_endpoint }}
  clusterName: {{ cluster_name }}
  network:
    cni:
      name: none
    dnsDomain: cluster.local
    podSubnets:
      - 10.244.0.0/16
    serviceSubnets:
      - 10.96.0.0/12
  token: {{ secrets.secrets.bootstraptoken }}
  secretboxEncryptionSecret: {{ secrets.secrets.secretboxencryptionsecret }}
  ca:
    crt: {{ secrets.certs.k8s.crt }}
    key: {{ secrets.certs.k8s.key }}
  aggregatorCA:
    crt: {{ secrets.certs.k8saggregator.crt }}
    key: {{ secrets.certs.k8saggregator.key }}
  serviceAccount:
    key: {{ secrets.certs.k8sserviceaccount.key }}
  apiServer:
    image: registry.k8s.io/kube-apiserver:{{ kubernetes_version }}
    certSANs:
      - {{ cluster_endpoint.split(':')[0] }}
    disablePodSecurityPolicy: true
    admissionControl: []
    auditPolicy:
      apiVersion: audit.k8s.io/v1
      kind: Policy
      rules:
        - level: Metadata
  controllerManager:
    image: registry.k8s.io/kube-controller-manager:{{ kubernetes_version }}
  proxy:
    disabled: false
    image: registry.k8s.io/kube-proxy:{{ kubernetes_version }}
  scheduler:
    image: registry.k8s.io/kube-scheduler:{{ kubernetes_version }}
  discovery:
    enabled: true
    registries:
      kubernetes:
        disabled: false
      service:
        disabled: false
  etcd:
    ca:
      crt: {{ secrets.certs.etcd.crt }}
      key: {{ secrets.certs.etcd.key }}
  coreDNS:
    disabled: false
    image: {{ coredns_image }}
  allowSchedulingOnControlPlanes: true
{% if cni_manifests %}
  inlineManifests:
    # Gateway API CRDs MUST load before Cilium for Gateway API support
    - name: gateway-api-crds
      contents: |
{{ gateway_api_crds | indent(8, first=True) }}
    # Cilium CNI with Gateway API support
    - name: cilium-cni
      contents: |
{{ cni_manifests | indent(8, first=True) }}
{% endif %}
